{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        // windows linebreaks when not in production environment
        "linebreak-style": [
            "error", "windows"
        ],
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              ".js": "always"
            }
        ]
    }
}
